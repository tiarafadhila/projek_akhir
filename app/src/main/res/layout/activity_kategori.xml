<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_kategori"
    tools:context=".kategori"
    tools:ignore="SpeakableTextPresentCheck">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="650dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="40dp">

            <Button
                android:id="@+id/tari_sumbar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="0dp"
                android:width="200dp"
                android:background="@drawable/button_shape"
                android:fontFamily="sans-serif"
                android:text="Sumatera Barat"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/tari_riau"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:width="200dp"
                android:background="@drawable/button_shape"
                android:fontFamily="sans-serif"
                android:text="Riau"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/tari_jabar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:width="200dp"
                android:background="@drawable/button_shape"
                android:fontFamily="sans-serif"
                android:text="Jawa Barat"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/tari_jatim"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:width="200dp"
                android:background="@drawable/button_shape"
                android:fontFamily="sans-serif"
                android:text="Jawa Timur"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/tari_aceh"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="70dp"
                android:width="200dp"
                android:background="@drawable/button_shape"
                android:fontFamily="sans-serif"
                android:text="Aceh"
                android:textColor="@color/black" />

        </LinearLayout>

        <ImageView
            android:id="@+id/profile_button2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="690dp"
            android:layout_marginRight="330dp"
            android:src="@drawable/profil" />

        <ImageView
            android:id="@+id/kategori_button2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="690dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/kategori" />

        <ImageView
            android:id="@+id/home_button2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="730dp"
            android:src="@drawable/home" />
    </RelativeLayout>

</ScrollView>